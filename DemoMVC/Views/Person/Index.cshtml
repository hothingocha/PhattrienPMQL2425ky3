@model IEnumerable<DemoMVC.Models.Person>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().PersonId)</th>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
             <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model)
{
        <tr>
            <td>@item.PersonId</td>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-primary">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

